{
  "name": "chatwebapp",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "A desktop chat application built with Electron.",
  "author": "manish keer",
  "main": "electron/main.js",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build": "tsc -b && vite build",
    "build:window": "electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron ."
  },
  "build": {
    "appId": "com.ms19.manishchatapp",
    "productName": "ChatApplication",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "@stomp/stompjs": "^7.0.0",
    "axios": "^1.7.9",
    "emoji-picker-react": "^4.12.2",
    "framer-motion": "^11.16.0",
    "gsap": "^3.12.5",
    "react": "^18.3.1",
    "react-18-image-lightbox": "^5.1.4",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.4.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.1",
    "sockjs-client": "^1.6.1",
    "styled-components": "^6.1.14",
    "yet-another-react-lightbox": "^3.23.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/sockjs-client": "^1.5.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}
